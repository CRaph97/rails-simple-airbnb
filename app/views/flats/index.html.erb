
<div>
  <h1>All our Flats(<%= @flats.count %>)</h1>
</div>
<div class="row">
    <% @flats.each do |flat| %>
      <div class="col-4">
        <div class="flat-card">
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><i class="fa-solid fa-location-dot"></i> <%= flat.address %></p>
            <div class="flex">
              <div class="flex">
                <span><%= flat.number_of_guests %></span> <i class="fa-solid fa-user"></i>
              </div>
              <div class="flex ml-3">
                <i class="fa-solid fa-euro-sign"></i> <%= flat.price_per_night %>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to 'More info', flat_path(flat) %>
            <a href="#" class="ml-3 text-warning">Edit</a>
            <a href="#" class="ml-3 text-danger">Remove</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
